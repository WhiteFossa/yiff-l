<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yiff_hl.Pages.FoxSettingsPage"
             Title="Fox settings">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Here will be fox settings" />

            <Editor
                x:Name="edMessagesFromFox"
                Placeholder="MessagesFromFox"
                HeightRequest="200" />

            <Button
                Text="Send message"
                Clicked="OnSendMessageClicked"
                />

            <Button
                Text="Set current date and time"
                Clicked="OnSetCurrentDateAndTime"
                />

            <Button
                Text="Disconnect"
                Clicked="OnDisconnectClicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>