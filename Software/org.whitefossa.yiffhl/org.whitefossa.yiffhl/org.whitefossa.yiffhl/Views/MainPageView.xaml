<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="org.whitefossa.yiffhl.Views.MainPageView"
             xmlns:viewModels="clr-namespace:org.whitefossa.yiffhl.ViewModels" >

    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <!-- Fox selection -->
                <Frame
                    Style="{StaticResource FramesStyle}">

                    <StackLayout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Text="Connect to a fox"
                                HorizontalOptions="Center"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"/>

                            <Picker
                                Title="Select a fox to connect"
                                Grid.Row="1"
                                Grid.Column="0"
                                ItemsSource="{Binding PairedFoxes}"
                                ItemDisplayBinding="{Binding DisplayName}"
                                SelectedItem="{Binding SelectedFox}"
                                SelectedIndexChanged="pkFox_SelectedIndexChanged"
                                IsEnabled="{Binding IsFoxPickerEnabled}">
                            </Picker>

                            <Button
                                Text="R"
                                Grid.Row="1"
                                Grid.Column="1"
                                HeightRequest="40"
                                WidthRequest="40"
                                Command="{Binding RefreshFoxesListClickedCommand}"
                                IsEnabled="{Binding IsConnectRelatedControlsEnabled}" />

                            <Button
                                Text="Connect"
                                Grid.Row="1"
                                Grid.Column="2"
                                Command="{Binding ConnectButtonClickedCommand}"
                                IsEnabled="{Binding IsConnectButtonEnabled}" />

                            <Button
                                Text="Disconnect"
                                HorizontalOptions="CenterAndExpand"
                                Grid.Row="2"
                                Grid.Column="2"
                                Command="{Binding DisconnectButtonClickedCommand}"
                                IsEnabled="{Binding IsBtnDisconnectEnabled}" />
                        </Grid>

                    </StackLayout>
                </Frame>
                <!-- End of fox selection -->

                <!-- Fox identification -->
                <Frame
                    Style="{StaticResource FramesStyle}">

                    <StackLayout>
                        <Label
                            Text="Fox information"
                            HorizontalOptions="Center" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="0">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        Text="Name:" />
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding FoxName}"/>
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        Text="Hardware revision:" />
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding FoxHardwareRevision}" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        Text="Firmware verison:" />
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding FoxFirmwareVersion}" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal">
                                    <Label
                                        Text="Serial number:" />
                                    <Label
                                        FontAttributes="Bold"
                                        Text="{Binding FoxSerialNumber}"/>
                                </StackLayout>
                            </StackLayout>

                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="1">
                                <Button
                                    Text="Rename fox"
                                    Command="{Binding RenameFoxClickedCommand}"
                                    IsEnabled="{Binding IsFoxConnected}" />

                                <Button
                                    Text="Check for updates"
                                    IsEnabled="{Binding IsFoxConnected}"/>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Frame>
                <!-- End of fox identification -->
                
                <!-- Fox status -->

                <Frame
                    Style="{StaticResource FramesStyle}">

                    <StackLayout>

                        <Label
                            Text="Fox status"
                            HorizontalOptions="Center" />

                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Horizontal">

                            <Label
                                Text="Battery:"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                            <Label
                                Text="{Binding BatteryLevelFormatted}"
                                FontAttributes="Bold"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="Center" />
                        </StackLayout>

                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Horizontal">

                            <Label
                                Text="Status:"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                            <Label
                                Text="{Binding IsFoxArmedFormatted}"
                                FontAttributes="Bold"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="Center" />

                            <Button
                                Text="Arm"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                Command="{Binding ArmFoxCommand}"
                                IsEnabled="{Binding IsArmButtonEnabled}" />

                            <Button
                                Text="Disarm"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                IsEnabled="{Binding IsDisarmButtonEnabled}" />
                        </StackLayout>

                    </StackLayout>
                    
                </Frame>

                <!-- End of fox status -->

                <!-- Profiles -->
                <Frame
                    Style="{StaticResource FramesStyle}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Text="Profiles"
                            HorizontalOptions="Center"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="4" />

                        <Picker
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Title="Select a profile"
                            ItemsSource="{Binding Profiles}"
                            ItemDisplayBinding="{Binding Name}"
                            IsEnabled="{Binding IsFoxConnected}"
                            SelectedItem="{Binding SelectedProfile}"
                            SelectedIndexChanged="pkProfile_SelectedIndexChanged">
                        </Picker>

                        <Button
                            Grid.Row="1"
                            Grid.Column="3"
                            HeightRequest="40"
                            WidthRequest="40"
                            Text="R"
                            Command="{Binding RefreshProfilesListClickedCommand}"
                            IsEnabled="{Binding IsFoxConnected}" />

                        <Label
                            Text="{Binding ProfilesCountText}"
                            Grid.Row="2"
                            Grid.Column="0"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand" />

                        <Button
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="Add"
                            Command="{Binding AddProfileClickedCommand}"
                            IsEnabled="{Binding IsAddProfileButtonEnabled}" />

                        <Button
                            Grid.Row="2"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Text="Rename"
                            Command="{Binding RenameProfileClickedCommand}"
                            IsEnabled="{Binding IsFoxConnected}" />
                    </Grid>
                </Frame>
                <!-- End of profiles -->

                <!-- Profile settings -->
                <Frame
                    Style="{StaticResource FramesStyle}">

                    <StackLayout>
                        <Label
                        Text="Profile settings"
                        HorizontalOptions="Center" />

                        <Frame
                            Style="{StaticResource InnerFramesStyle}">
                            <StackLayout>
                                <Label
                                    Text="Frequency"
                                    HorizontalOptions="Center" />

                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">

                                    <Label
                                        Text="Range:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />

                                    <Label
                                        Text="{Binding FoxRangeFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand" />

                                    <Button
                                        Text="&lt;--&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End" 
                                        Command="{Binding ToggleFoxFrequencyRangeCommand}"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">
                                    <Label
                                        Text="Frequency:"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start" />

                                    <Label
                                        Text="{Binding FrequencyFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand" />

                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding DecreaseFoxFrequencyCommand}"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding IncreaseFoxFrequencyCommand}"
                                        IsEnabled="{Binding IsControlsEnabled}" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>

                        <Frame
                            Style="{StaticResource InnerFramesStyle}">
                            <StackLayout>
                                <Label
                                    Text="Callsign"
                                    HorizontalOptions="Center" />

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Callsign:"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start" />

                                    <Picker
                                        Title="Select a callsign"
                                        ItemsSource="{Binding Callsigns}"
                                        ItemDisplayBinding="{Binding Name}"
                                        SelectedItem="{Binding SelectedCallsign}"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"
                                        SelectedIndexChanged="pkCallsign_SelectedIndexChanged"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="TX speed:"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start" />
                                    
                                    <Label
                                        Text="{Binding TxSpeedFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"/>

                                    <Button 
                                        Text="&lt;--&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding ToggleFoxSpeedCommand}"
                                        IsEnabled="{Binding IsControlsEnabled}" />


                                </StackLayout>
                            </StackLayout>
                        </Frame>

                        <Frame
                            Style="{StaticResource InnerFramesStyle}">
                            <StackLayout>
                                <Label
                                    Text="Cycle"
                                    HorizontalOptions="Center" />

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Mode:"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Start" />

                                    <Label
                                        Text="{Binding FoxCycleTypeFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand" />

                                    <Button 
                                        Text="&lt;--&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding ToggleCycleModeCommand}"
                                        IsEnabled="{Binding IsControlsEnabled}" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="TX duration:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Label
                                        Text="{Binding TxDurationFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand" 
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&lt;&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreaseTxDurationBigCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />
                                    
                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreaseTxDurationSmallCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreaseTxDurationSmallCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&gt;&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreaseTxDurationBigCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Pause duration:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Label
                                        Text="{Binding PauseDurationFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&lt;&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreasePauseDurationBigCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />
                                    
                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreasePauseDurationSmallCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreasePauseDurationSmallCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&gt;&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreasePauseDurationBigCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />
                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Ending tone duration:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />

                                    <Label
                                        Text="{Binding EndingToneDurationFormatted}"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding DecreaseEndingToneDurationCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        Command="{Binding IncreaseEndingToneDurationCommand}"
                                        IsEnabled="{Binding IsCycleControlsEnabled}" />
                                </StackLayout>
                                
                            </StackLayout>
                        </Frame>

                        <Frame
                            Style="{StaticResource InnerFramesStyle}">
                            <StackLayout>
                                <Label
                                    Text="Run times"
                                    HorizontalOptions="Center" />

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Start time:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />

                                    <TimePicker
                                        Format="HH:mm:ss"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"
                                        Time="{Binding StartTime}"
                                        PropertyChanged="tpStart_PropertyChanged"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreaseStartTime}"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreaseStartTime}"
                                        IsEnabled="{Binding IsControlsEnabled}" />


                                </StackLayout>

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="End time:"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />

                                    <TimePicker
                                        Format="HH:mm:ss"
                                        VerticalOptions="Center"
                                        HorizontalOptions="EndAndExpand"
                                        Time="{Binding FinishTime}"
                                        PropertyChanged="tpFinish_PropertyChanged"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreaseFinishTime}"
                                        IsEnabled="{Binding IsControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreaseFinishTime}"
                                        IsEnabled="{Binding IsControlsEnabled}" />
                                </StackLayout>
                                
                            </StackLayout>
                        </Frame>

                        <Frame
                            Style="{StaticResource InnerFramesStyle}">
                            <StackLayout>
                                <Label
                                    Text="Power"
                                    HorizontalOptions="Center" />

                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="FillAndExpand">

                                    <Label
                                        Text="Power (80m only):"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center" />

                                    <Label
                                        Text="{Binding PowerFormatted}"
                                        FontAttributes="Bold"
                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="Center" />

                                    <Button
                                        Text="&lt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding DecreasePower}"
                                        IsEnabled="{Binding IsPowerControlsEnabled}" />

                                    <Button
                                        Text="&gt;"
                                        VerticalOptions="Center"
                                        HorizontalOptions="End"
                                        WidthRequest="40"
                                        Command="{Binding IncreasePower}"
                                        IsEnabled="{Binding IsPowerControlsEnabled}" />
                                </StackLayout>

                            </StackLayout>
                        </Frame>

                    </StackLayout>

                </Frame>
                <!-- End of profile settings -->

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>