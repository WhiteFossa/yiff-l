<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="org.whitefossa.yiffhl.Views.MainPageView"
             xmlns:viewModels="clr-namespace:org.whitefossa.yiffhl.ViewModels" >

    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <!-- Fox selection -->
            <Frame
                CornerRadius="10"
                HasShadow="True"
                Margin="5"
                Padding="5">

                <StackLayout>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Text="Connect to a fox"
                            HorizontalOptions="Center"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"/>

                        <Picker
                            x:Name="pkFox"
                            Title="Select a fox to connect"
                            Grid.Row="1"
                            Grid.Column="0"
                            ItemsSource="{Binding PairedFoxes}"
                            ItemDisplayBinding="{Binding DisplayName}"
                            SelectedItem="{Binding SelectedFox}"
                            SelectedIndexChanged="pkFox_SelectedIndexChanged"
                            IsEnabled="{Binding IsFoxSelectorEnabled}">
                        </Picker>

                        <Button
                            x:Name="btnRefreshFoxesList"
                            Text="R"
                            Grid.Row="1"
                            Grid.Column="1"
                            HeightRequest="40"
                            WidthRequest="40"
                            Command="{Binding RefreshFoxesListClickedCommand}"
                            IsEnabled="{Binding IsRefreshFoxesListButtonEnabled}" />

                        <Button
                            x:Name="btnConnect"
                            Text="Connect"
                            Grid.Row="1"
                            Grid.Column="2"
                            Command="{Binding ConnectButtonClickedCommand}"
                            IsEnabled="{Binding IsBtnConnectEnabled}" />

                        <Button
                            x:Name="btnDisconnect"
                            Text="Disconnect"
                            HorizontalOptions="CenterAndExpand"
                            Grid.Row="2"
                            Grid.Column="2"
                            Command="{Binding DisconnectButtonClickedCommand}"
                            IsEnabled="{Binding IsBtnDisconnectEnabled}"
                            />
                    </Grid>
                    
                </StackLayout>
            </Frame>

            <!-- End of fox selection -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>